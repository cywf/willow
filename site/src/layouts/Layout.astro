---
import '../styles/global.css';
import ThemeSwitcher from '../components/ThemeSwitcher';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Willow - A Real Estate NFT Decentralized Application' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/willow';

// Get build info from env if available
const deployTimestamp = new Date().toISOString();
const shortSha = process.env.GITHUB_SHA?.substring(0, 7) || 'local';

const navLinks = [
  { href: `${baseUrl}/`, label: 'Home' },
  { href: `${baseUrl}/app`, label: 'App' },
  { href: `${baseUrl}/statistics`, label: 'Statistics' },
  { href: `${baseUrl}/discussions`, label: 'Discussions' },
  { href: `${baseUrl}/development-board`, label: 'Dev Board' },
  { href: `${baseUrl}/create-issue`, label: 'Create Issue' },
  { href: `${baseUrl}/docs`, label: 'Docs' },
  { href: `${baseUrl}/visualizer`, label: 'Visualizer' },
];

// Generate breadcrumb from current path
const currentPath = Astro.url.pathname;
const pathSegments = currentPath.replace(baseUrl, '').split('/').filter(Boolean);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <title>{title} | Willow</title>
    
    <!-- Initial theme script to prevent flash -->
    <script is:inline>
      const savedTheme = localStorage.getItem('theme');
      const defaultTheme = 'nightfall';
      if (savedTheme) {
        document.documentElement.setAttribute('data-theme', savedTheme);
      } else {
        document.documentElement.setAttribute('data-theme', defaultTheme);
      }
    </script>
  </head>
  <body>
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Navigation -->
    <nav class="navbar bg-base-200 shadow-lg sticky top-0 z-40">
      <div class="navbar-start">
        <div class="dropdown">
          <label tabIndex={0} class="btn btn-ghost lg:hidden">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>
          <ul tabIndex={0} class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-200 rounded-box w-52">
            {navLinks.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        <a href={`${baseUrl}/`} class="btn btn-ghost text-xl">
          <span class="font-bold text-primary">üè° Willow</span>
        </a>
      </div>
      
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1 gap-1">
          {navLinks.map(link => (
            <li>
              <a 
                href={link.href}
                class={currentPath === link.href || (link.href !== baseUrl && currentPath.startsWith(link.href)) ? 'active' : ''}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="navbar-end gap-2">
        <a href="https://github.com/cywf/willow" target="_blank" rel="noopener noreferrer" class="btn btn-ghost btn-sm" aria-label="View on GitHub">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <ThemeSwitcher client:load />
      </div>
    </nav>

    <!-- Breadcrumb -->
    {pathSegments.length > 0 && (
      <div class="bg-base-200 px-4 py-2 text-sm">
        <div class="container mx-auto">
          <div class="breadcrumbs">
            <ul>
              <li><a href={`${baseUrl}/`}>Home</a></li>
              {pathSegments.map((segment, index) => {
                const href = `${baseUrl}/${pathSegments.slice(0, index + 1).join('/')}`;
                const isLast = index === pathSegments.length - 1;
                const label = segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' ');
                return (
                  <li>
                    {isLast ? (
                      <span class="text-base-content/70">{label}</span>
                    ) : (
                      <a href={href}>{label}</a>
                    )}
                  </li>
                );
              })}
            </ul>
          </div>
        </div>
      </div>
    )}

    <!-- Main Content -->
    <main id="main-content" class="container mx-auto px-4 py-8 min-h-[60vh]">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-200 text-base-content">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 w-full max-w-6xl">
        <div class="text-left">
          <p class="font-bold text-lg">Willow</p>
          <p>Real Estate NFT DApp</p>
          <p class="text-sm opacity-70 mt-2">
            Licensed under <a href="https://github.com/cywf/willow/blob/main/LICENSE" class="link" target="_blank">MIT License</a>
          </p>
        </div>
        
        <div>
          <p class="font-semibold mb-2">Quick Links</p>
          <div class="flex flex-wrap gap-2 justify-center">
            <a href="https://github.com/cywf/willow" class="link link-hover">GitHub</a>
            <a href="https://github.com/cywf/willow/issues" class="link link-hover">Issues</a>
            <a href="https://github.com/cywf/willow/discussions" class="link link-hover">Discussions</a>
            <a href={`${baseUrl}/docs`} class="link link-hover">Documentation</a>
          </div>
        </div>
        
        <div class="text-right">
          <p class="text-sm opacity-70">
            Last deployed: <time datetime={deployTimestamp}>{new Date(deployTimestamp).toLocaleDateString()}</time>
          </p>
          <p class="text-sm opacity-70">
            Build: <code class="badge badge-sm">{shortSha}</code>
          </p>
        </div>
      </div>
      
      <div class="mt-4">
        <p class="text-xs opacity-50">
          Built with Astro, React, and TailwindCSS ‚Ä¢ Hosted on GitHub Pages
        </p>
      </div>
    </footer>
  </body>
</html>
