---
import Layout from '../layouts/Layout.astro';
import { marked } from 'marked';
import { readFile } from 'fs/promises';
import { join } from 'path';

// Configure marked for dark theme
marked.setOptions({
  highlight: function(code, lang) {
    return `<pre><code class="language-${lang}">${code}</code></pre>`;
  },
  breaks: true,
  gfm: true,
});

// Read README.md
let readmeContent = '';
let deploymentContent = '';

try {
  const readmePath = join(process.cwd(), '..', 'README.md');
  readmeContent = await readFile(readmePath, 'utf-8');
} catch (error) {
  console.error('Error reading README:', error);
  readmeContent = '# README not found';
}

try {
  const deploymentPath = join(process.cwd(), '..', '.github', 'DEPLOYMENT.md');
  deploymentContent = await readFile(deploymentPath, 'utf-8');
} catch (error) {
  console.log('DEPLOYMENT.md not found, skipping');
}

const readmeHtml = marked(readmeContent);
const deploymentHtml = deploymentContent ? marked(deploymentContent) : '';

// Generate table of contents from README
function generateToc(markdown: string) {
  const headings = markdown.match(/^#{1,3}\s+.+$/gm) || [];
  return headings.map(heading => {
    const level = heading.match(/^#+/)?.[0].length || 0;
    const text = heading.replace(/^#+\s+/, '');
    const id = text.toLowerCase().replace(/[^\w\s-]/g, '').replace(/\s+/g, '-');
    return { level, text, id };
  });
}

const tocItems = generateToc(readmeContent);
---

<Layout title="Documentation">
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Sidebar TOC -->
    <aside class="lg:col-span-1">
      <div class="sticky top-24 space-y-4">
        <div class="card bg-base-200 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-sm">Table of Contents</h2>
            <ul class="menu menu-sm p-0">
              {tocItems.map(item => (
                <li style={`margin-left: ${(item.level - 1) * 0.75}rem`}>
                  <a href={`#${item.id}`} class="text-xs">
                    {item.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="card bg-base-200 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-sm">Quick Links</h2>
            <div class="flex flex-col gap-2">
              <a href="#readme" class="btn btn-sm btn-outline">README</a>
              {deploymentHtml && (
                <a href="#deployment" class="btn btn-sm btn-outline">Deployment</a>
              )}
              <a href="https://github.com/cywf/willow" target="_blank" class="btn btn-sm btn-outline">
                GitHub Repo
              </a>
            </div>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <div class="lg:col-span-3 space-y-8">
      <div>
        <h1 class="text-4xl font-bold mb-2">Documentation</h1>
        <p class="text-base-content/70">
          Complete guide for Willow Real Estate NFT Platform
        </p>
      </div>

      <!-- README Section -->
      <section id="readme" class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">README.md</h2>
            <a 
              href="https://github.com/cywf/willow/blob/main/README.md" 
