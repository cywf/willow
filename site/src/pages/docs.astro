            </div>
            <div class="prose prose-invert max-w-none" set:html={deploymentHtml} />
          </div>
        </section>
      )}

      <!-- Additional Resources -->
      <div class="alert alert-info">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h3 class="font-bold">Need More Help?</h3>
          <div class="text-sm flex flex-wrap gap-2 mt-2">
            <a href="https://github.com/cywf/willow/issues" target="_blank" class="link">Report an Issue</a>
            <span>•</span>
            <a href="https://github.com/cywf/willow/discussions" target="_blank" class="link">Ask Questions</a>
            <span>•</span>
            <a href="https://github.com/cywf/willow/wiki" target="_blank" class="link">Check the Wiki</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .prose {
    color: oklch(var(--bc));
  }
  
  .prose :where(h1, h2, h3, h4, h5, h6):not(:where([class~="not-prose"] *)) {
    color: oklch(var(--bc));
    font-weight: bold;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }
  
  .prose :where(code):not(:where([class~="not-prose"] *)) {
    background: oklch(var(--b3));
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  
  .prose :where(pre):not(:where([class~="not-prose"] *)) {
    background: oklch(var(--b3));
    padding: 1em;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  
  .prose :where(pre code):not(:where([class~="not-prose"] *)) {
    background: transparent;
    padding: 0;
  }
  
  .prose :where(a):not(:where([class~="not-prose"] *)) {
    color: oklch(var(--p));
    text-decoration: none;
  }
  
  .prose :where(a):not(:where([class~="not-prose"] *)):hover {
    text-decoration: underline;
  }
  
  .prose :where(blockquote):not(:where([class~="not-prose"] *)) {
    border-left: 4px solid oklch(var(--p));
    padding-left: 1em;
    font-style: italic;
    opacity: 0.8;
  }
  
  .prose :where(ul, ol):not(:where([class~="not-prose"] *)) {
    padding-left: 1.5em;
  }
  
  .prose :where(table):not(:where([class~="not-prose"] *)) {
    width: 100%;
    border-collapse: collapse;
  }
  
  .prose :where(th, td):not(:where([class~="not-prose"] *)) {
    border: 1px solid oklch(var(--bc) / 0.2);
    padding: 0.5em;
  }
  
  .prose :where(th):not(:where([class~="not-prose"] *)) {
    background: oklch(var(--b3));
    font-weight: bold;
  }
</style>
